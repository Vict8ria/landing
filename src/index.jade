		script.
			$(document).ready(function() {
				$('.popup').magnificPopup({
				  type: 'iframe',
				  iframe: {
				    patterns: {
				      dailymotion: {
				       
				        index: 'youtube.com',
				        
				        id: function(url) {        
				            var m = url.match(/^.+youtube.com\/(video|hub)\/([^_]+)[^#]*(=([^_&]+))?/);
				            if (m !== null) {
				                if(m[4] !== undefined) {
				                  
				                    return m[4];
				                }
				                return m[2];
				            }
				            return null;
				        },
				        
				        src: 'https://www.youtube.com/%id%'
				        
				      }
				    }
				  }
				  
				  
				});
			});

				
						

